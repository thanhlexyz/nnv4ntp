        \node[blue!80!black] at (5.0,1.5) {lower bound};

        % Upper bound
        \draw[blue!80!black,thick,dashed] plot coordinates {(0.8,2.4) (4.5,2.8)};
        \node[blue!80!black] at (5.0,3.0) {upper bound};

