        % Robustness bound
        \draw[orange!80!black,thick,dashed] plot coordinates {(1.0,0.3) (4,1.0)};
        \draw[orange!80!black,thick,dashed] plot coordinates {(1.0,3.3) (4,3.0)};
        % draw grid shade between 2 lines
        \path[pattern=grid, pattern color=orange!50, opacity=0.4] (1.0, 0.3) -- (4,1.0) -- (4,3.0) -- (1.0,3.3) -- cycle;

        \node[orange!80!black] (robust_label) at (2.1,2.9) {Robust region};


        % Perturbation set on x-axis
        \draw[blue!80!black,line width=2pt] (1,0) -- (4,0);
        \node[blue!80!black,below] at (2.5,-0.1) {perturbation space};


        % Function f(x) - with separated peaks
