            (-0.3,1)
            (0.5,0.8)
            (1,1.2)
            % (1.5,0.9)
            (2,1.1)
            (2.5,2.2)
            % (3,1.3)
            (3.5,1.6)
            % (4,2)
            (4,2.2)
            (5,2.0)
            (5.5,2.3)
        };
        \node[red!80!black,right] at (1.2,1.5) {$\mathcal{N}(x)$};

        % Vertical dotted lines
        \draw[dashed,thick] (1,-0.5) -- (1,3.4);
        \draw[dashed,thick] (4,-0.5) -- (4,3.4);
    \end{tikzpicture}
